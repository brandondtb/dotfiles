syntax on
filetype on
filetype plugin indent on

" ui
set laststatus=2
set ruler

" line numbering
set number
set relativenumber

" indent
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

" formatting
set linebreak
set wrap

" search
set hlsearch
set showmatch

" mappings
:imap fd <Esc>
